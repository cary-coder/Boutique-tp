{% extends 'layout.html.twig' %}
{% block title %}
	{{ parent() }}Hello Home!
{%
endblock %}
{% block content %}
	<div class="row d-flex justify-content-center text-center">
		<h1>Bienvenue à la boutique du t-shirt!</h1>
		<h2>Voici nos derniers produits !</h2>
		{% for produit in produits %}
			<div class="card" style="width: 14rem">
				<div class="card-body text-center">
					<h4 class="card-title">
						<a class="text-decoration-none text-success" href="{{ path('produit_show', { id: produit.id }) }}">{{produit.titre}}</a>
					</h4>
					<div class="col-md-12 center-block">
						<img class="img-responsive fit-image " src="{{asset('photosProduits/'~ produit.photo) }}" alt="{{ produit.titre }}"/>
					</div>
					<h6>ajouté le:
						{{produit.dateEnregistrement | date('d/m/Y')}}</h6>
					<h5>couleur:
						{{ produit.couleur }}</h5>
					<h5>tailles:
						{{ produit.taille }}</h5>
					<h5 class="text-danger">
						{{ produit.prix }}
						€</h5>

					<h5>il en reste:
						{{ produit.stock }}</h5>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock content %}
